<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.schmi.tp_interfaces_simples.Interface3"
    android:weightSum="1">

    <TextView
        android:id="@+id/Infos"
        android:layout_width="wrap_content"
        android:layout_height="318dp"
        android:gravity="center_horizontal"
        android:text="Informations"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_weight="0.40" />

    <Button
        android:id="@+id/Third_But"
        android:layout_width="383dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:text="@string/Text_Third_But"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Infos"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Fourth_But"
        android:layout_width="384dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/Text_Fourth_But"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Third_But"
        tools:layout_editor_absoluteX="0dp" />
</LinearLayout>
